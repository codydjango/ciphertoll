// Place your settings in this file to overwrite default and user settings.
{
  "search.exclude": {
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/*?.js": {
      "when": "$(basename).tsx"
    },
    "**/*.js.map": {
      "when": "$(basename)"
    },
    "**/node_modules": true
  },
  "files.exclude": {
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/*?.js": {
      "when": "$(basename).tsx"
    },
    "**/*.js.map": {
      "when": "$(basename)"
    },
    "node_modules": false
  },
  "tslint.autoFixOnSave": true,
  "editor.formatOnSave": true,
  "typescript.tsdk": "./node_modules/typescript/lib"
}
